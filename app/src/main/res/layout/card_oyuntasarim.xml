<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOyun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/oyun">

            <ImageView
                android:id="@+id/oyunResim"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/pes2019" />

            <TextView
                android:id="@+id/oyunBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oyunResim"
                android:layout_centerHorizontal="true"
                android:text="Pes2019"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/oyunButon"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/oyunBaslik"
                android:layout_centerHorizontal="true"
                android:text="Oyna"
                android:background="#40c4ff"/>

            <ImageView
                android:id="@+id/oyunDaha"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>